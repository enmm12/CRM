<script type="text/javascript">

	$(function(){



		$("#addBtn").click(function () {

			$(".time").datetimepicker({
				minView: "month",
				language:  'zh-CN',
				format: 'yyyy-mm-dd',
				autoclose: true,
				todayBtn: true,
				pickerPosition: "bottom-left"
			});

			// alert(123);
			//$("#createActivityModal").modal("show");
			$.ajax({

				url : "workbench/activity/getUserList.do",
				type : "get",
				dataType : "json",
				success : function(data){
					var html = "";
					$.each(data,function (i,n) {

						html += "<option value='"+n.id+"'>"+n.name+"</option>"

					})
					$("#create-owner").html(html);
					var id = "${user.id}";
					$("#create-owner").val(id);

					$("#createActivityModal").modal("show");
				}
			})
		})

		//为创建市场活动提交按钮绑定事件
		$("#saveBtn").click(function () {

			$.ajax({

				url : "workbench/activity/save.do",
				data : {

					"owner" : $.trim($("#create-owner").val()),
					"name" : $.trim($("#create-name").val()),
					"startDate" : $.trim($("#create-startDate").val()),
					"endDate" : $.trim($("#create-endDate").val()),
					"cost" : $.trim($("#create-cost").val()),
					"description" : $.trim($("#create-description").val())
				},
				type : "post",
				dataType : "json",
				success : function(data){
					//data中存的是success，是Boolean值，true表示存储成功，false表示存储失败
					//存储成功
					if(data.success){

						//将模态窗口中的数据清空
						$("#activityAddForm")[0].reset();

						pageList(1,$("#activityPage").bs_pagination('getOption', 'rowsPerPage'));

						//关闭模态窗口
						$("#createActivityModal").modal("hide");
					//存储失败
					}else{
						alert("数据存储失败")
					}


				}
			})

		})

		//页面加载完显示数据
		pageList(1,2);

		//为查询按钮绑定一个查询函数
		$("#searchBtn").click(function () {

			//点击查询按钮的时候，在隐藏域中保存当前查询的信息
			$("#hidden-name").val($.trim($("#search-name").val()));
			$("#hidden-owner").val($.trim($("#search-owner").val()));
			$("#hidden-startDate").val($.trim($("#search-startDate").val()));
			$("#hidden-endDate").val($.trim($("#search-endDate").val()));

			pageList($("#activityPage").bs_pagination('getOption', 'currentPage')
					,$("#activityPage").bs_pagination('getOption', 'rowsPerPage'));
		})


		//为全选的复选框绑定事件，触发全选操作
		$("#qx").click(function () {

			$("input[name=xz]").prop("checked",this.checked);

		})


        //为单选框绑定事件，是ajax动态生成的单选框，所以使用on方式绑定事件，
		$("#search-tbody").on("click",$("input[name=xz]"),function () {

			$("#qx").prop("checked",$("input[name=xz]").length==$("input[name=xz]:checked").length);

		})


        //执行删除市场活动操作
        $("#deleteBtn").click(function () {

            var $xz = $("input[name=xz]:checked");
            if($xz.length==0){

                alert("请选择需要删除的记录");

            }else{

                if(confirm("确定删除信息")){

                    //alert("进行删除");
                    //url:workbench/activity/delete.do?id=xx&id=xx&....
                    var param = "";
                    for(var i=0; i<$xz.length; i++){
                        param += "id=" + $($xz[i]).val();
                        if(i<$xz.length-1){
                            param += "&";
                        }
                    }

                    $.ajax({

                        url : "workbench/activity/delete.do",
                        data : param,
                        type : "post",
                        dataType : "json",
                        success : function(data){

                            //data:{"success":true/false}
                            //删除成功
                            if(data.success){

								pageList(1,$("#activityPage").bs_pagination('getOption', 'rowsPerPage'));
                                //删除失败
                            }else{

                                alert("删除失败");

                            }

                        }
                    })

                }


            }

        })

		//执行选择要修改的市场活动
		$("#editBtn").click(function () {

			var $xz = $("input[name=xz]:checked");

			if($xz.length==0){
				alert("请选择修改操作")
			}else if($xz.length>1){
				alert("每次只能修改一条数据")
			}else{
				var id = $xz.val();

				//获取到一条数据，将这条数据的信息显示到模态窗口中
				$.ajax({

					url : "workbench/activity/getUserListAndActivity.do",
					data : {
						"id":id
					},
					type : "get",
					dataType : "json",
					success : function(data){

						//data中的数据 {"uList":[{用户1},{用户2},{用户3}...],"a":一条市场活动}
						var html = "<option></option>";
						$.each(data.uList,function (i,n) {
							html += "<option value='"+n.id+"'>"+n.name+"</option>";
						})
						//处理下拉列表中的数据
						$("#edit-owner").html(html);

						//处理Activity的单条数据
						$("#edit-id").val(data.a.id);
						$("#edit-name").val(data.a.name);
						$("#edit-owner").val(data.a.owner);
						$("#edit-startDate").val(data.a.startDate);
						$("#edit-endDate").val(data.a.endDate);
						$("#edit-cost").val(data.a.cost);
						$("#edit-description").val(data.a.description);

						//数据处理完后打开修改表单的模态窗口
						$("#editActivityModal").modal("show");
					}
				})

			}
		})

		//为市场活动修改按钮绑定事件，执行修改操作
		$("#updateBtn").click(function () {

			$.ajax({

				url : "workbench/activity/update.do",
				data : {
					"id" : $.trim($("#edit-id").val()),
					"owner" : $.trim($("#edit-owner").val()),
					"name" : $.trim($("#edit-name").val()),
					"startDate" : $.trim($("#edit-startDate").val()),
					"endDate" : $.trim($("#edit-endDate").val()),
					"cost" : $.trim($("#edit-cost").val()),
					"description" : $.trim($("#edit-description").val())
				},
				type : "post",
				dataType : "json",
				success : function(data){
					//data中存的是success，是Boolean值，true表示修改成功，false表示修改失败
					//修改成功
					if(data.success){

						pageList($("#activityPage").bs_pagination('getOption', 'currentPage')
								,$("#activityPage").bs_pagination('getOption', 'rowsPerPage'));

						//关闭修改模态窗口
						$("#editActivityModal").modal("hide");
					//修改失败
					}else{
						alert("数据修改失败")
					}


				}
			})

		})



		
	});

	/*分页查询和按条件查询，总共有六个地方需要这个分页查询函数
		* 增，删，查，改，进入市场活动窗口，点击分页组件的时候
		* 使用ajax方式实现分页查询，要略过的条数（pageNo-1）*pageSize
		* */
	function pageList(pageNo,pageSize) {

	    $("#qx").prop("checked",false);

		//查询前，将隐藏域中保存的信息取出，放入到信息框中
		$("#search-name").val($.trim($("#hidden-name").val()));
		$("#search-owner").val($.trim($("#hidden-owner").val()));
		$("#search-startDate").val($.trim($("#hidden-startDate").val()));
		$("#search-endDate").val($.trim($("#hidden-endDate").val()));

		$.ajax({

			url : "workbench/activity/pageList.do",
			data : {
				"pageNo" : pageNo,
				"pageSize" : pageSize,
				"name" : $.trim($("#search-name").val()),
				"owner" : $.trim($("#search-owner").val()),
				"startDate" : $.trim($("#search-startDate").val()),
				"endDate" : $.trim($("#search-endDate").val())
			},
			type : "get",
			dataType : "json",
			success : function(data){
				//data {"total":总记录条数,"dataList":{一条记录},{一条记录},{},....}
				var html = "";
				$.each(data.dataList,function (i,n) {

					html += '<tr class="active">';
					html += '<td><input type="checkbox" value="'+n.id+'" name="xz"/></td>';
					html += '<td><a style="text-decoration: none; cursor: pointer;" onclick="window.location.href=\'workbench/activity/detail.do?id='+n.id+'\';">'+n.name+'</a></td>';
					html += '<td>'+n.owner+'</td>';
					html += '<td>'+n.startDate+'</td>';
					html += '<td>'+n.endDate+'</td>';
					html += '</tr>';

				})
				$("#search-tbody").html(html);

				//计算总页数
				var totalPages = data.total%pageSize==0 ? data.total/pageSize:parseInt(data.total/pageSize)+1;

				//数据处理完毕后结合分页查询，对前端进行分页信息
				$("#activityPage").bs_pagination({
					currentPage: pageNo, // 页码
					rowsPerPage: pageSize, // 每页显示的记录条数
					maxRowsPerPage: 20, // 每页最多显示的记录条数
					totalPages: totalPages, // 总页数
					totalRows: data.total, // 总记录条数

					visiblePageLinks: 3, // 显示几个卡片

					showGoToPage: true,
					showRowsPerPage: true,
					showRowsInfo: true,
					showRowsDefaultInfo: true,

					onChangePage : function(event, data){
						pageList(data.currentPage , data.rowsPerPage);
					}
				});
			}
		})

	}
	
</script>
